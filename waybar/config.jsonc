{
  "margin": "0 0 0 0",
  "spacing": 5,
  "modules-left": ["hyprland/workspaces", "hyprland/submap"],
  "modules-center": ["hyprland/window"],
  "modules-right": ["pulseaudio", "tray", "idle_inhibitor", "clock"],
  "tray": {
    "icon-size": 18,
    "spacing": 10
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%I:%M %p}",
    "format-alt": "{:%Y-%m-%d}"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "🔇",
    "format-icons": {
      "headphone": "🎧",
      "hands-free": "🎧",
      "headset": "🎧",
      "phone": "📱",
      "portable": "📱",
      "car": "🚗",
      "default": ["🔈", "🔉", "🔊"]
    },
    "on-click": "pavucontrol",
    "tooltip": true,
    "tooltip-format": "{volume}%",
    "scroll-step": 5.0,
    "max-volume": 100,
    "smooth-scrolling-threshold": 1.0
  },
  "hyprland/window": {
    "separate-outputs": true
  },
  "idle_inhibitor": {
	  "format": "{icon}",
	  "format-icons": {
		  "activated": "",
		  "deactivated": ""
	  },
	  "timeout": 30.5
  }
}
