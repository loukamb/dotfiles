* {
    font-family: "JetBrains Mono", "Font Awesome 6 Free", "Font Awesome 6 Brands";
    font-size: 13px;
    min-height: 0;
}

#clock, #pulseaudio, #tray {
    padding: 0 1em 0 1em;
}

#workspaces * {
    color: #ffffff;
}

window#waybar {
    background: #000000;
    color: #ffffff;
}

#tray > .needs-attention {
    background-color: #eb4d4b;
}
