{
  "margin": "0 0 0 0",
  "spacing": 24,
  "position": "top",
  "height": 32,
  "modules-left": ["wlr/taskbar", "sway/mode"],
  "modules-center": ["clock"],
  "modules-right": ["tray", "pulseaudio", "idle_inhibitor", "sway/language"],
  "tray": {
    "icon-size": 18,
    "spacing": 10
  },
  "wlr/taskbar": {
    "on-click": "activate"
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%a, %b %d, %I:%M %p}"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "üîá",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click": "pavucontrol",
    "tooltip": true,
    "tooltip-format": "{volume}%",
    "scroll-step": 5.0,
    "max-volume": 100,
    "smooth-scrolling-threshold": 1.0
  },
  "sway/language": {
    "format": "ÔÑú {short}"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    },
    "timeout": 30.5
  }
}
